generator client {
  provider = "prisma-client-js"
  output   = "../../../../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  // При создании будут одинаковы, при репосте изменятся
  id        String     @id @default(uuid())
  originId  String?
  type      Type
  content   Json
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  // При создании будут одинаковы, при репосте изменятся
  userId    String
  authorId  String?
  published Boolean    @default(true)
  isOrigin  Boolean    @default(true)
  tags      Tag[]
  comments  Comment[]
  favorite  Favorite[]

  @@index([authorId])
  @@map("posts")
}

model Tag {
  name  String @id @unique
  posts Post[]

  @@map("tags")
}

model Comment {
  id        String   @id @default(uuid())
  text      String
  authorId  String
  post      Post     @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("comments")
}

model Favorite {
  id     String @id @default(uuid())
  post   Post   @relation(fields: [postId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  postId String
  userId String

  @@map("favorites")
}

enum Type {
  TEXT
  VIDEO
  QUOTA
  PHOTO
  LINK
}
