{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/authentication": ["libs/account/authentication/src/index.ts"],
      "@project/blog-comment": ["libs/blog/comment/src/index.ts"],
      "@project/blog-models": ["libs/blog/models/src/index.ts"],
      "@project/blog-post": ["libs/blog/post/src/index.ts"],
      "@project/data-access": ["libs/data-access/src/index.ts"],
      "@project/file-uploader": ["libs/file-uploader/src/index.ts"],
      "@project/notification": ["libs/notification/src/index.ts"],
      "@project/shared-configurations": [
        "libs/shared-configurations/src/index.ts"
      ],
      "@project/shared-helpers": ["libs/shared-helpers/src/index.ts"],
      "@project/shared-interceptors": ["libs/shared-interceptors/src/index.ts"],
      "@project/shared-pipes": ["libs/shared-pipes/src/index.ts"],
      "@project/shared-types": ["libs/shared-types/src/index.ts"],
      "@project/user": ["libs/account/user/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
